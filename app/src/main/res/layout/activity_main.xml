<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.aigo.arcseekbar.ArcColorSeekBar
        android:id="@+id/arcSeekDialogBar"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        app:arc_colors="@array/arc_colors_default"
        app:arc_max="100"
        app:arc_min="1"
        app:arc_open_angle="170"
        app:arc_rotate_angle="180"
        app:arc_shadow_radius="0dp"
        app:arc_thumb_color="#fff"
        app:arc_thumb_mode="FILL_STROKE"
        app:arc_thumb_radius="14dp"
        app:arc_thumb_shadow_color="#000000"
        app:arc_width="6dp" />

</LinearLayout>